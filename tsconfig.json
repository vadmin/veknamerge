{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // "allowImportingTsExtensions": true, // Removed this line
    // Ensure "noEmit" is not set or is false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}